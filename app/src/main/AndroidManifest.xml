<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zaich.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_github"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_github_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUserApp">
        <activity
            android:name=".layout.SettingActivity"
            android:exported="true" />
        <activity
            android:name=".layout.FavoriteActivity"
            android:exported="true" />
        <activity
            android:name=".layout.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.GitHubUserApp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout.DetailUserActivity" />
        <activity android:name=".layout.MainActivity" />
    </application>

</manifest>